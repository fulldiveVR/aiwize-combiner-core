{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
